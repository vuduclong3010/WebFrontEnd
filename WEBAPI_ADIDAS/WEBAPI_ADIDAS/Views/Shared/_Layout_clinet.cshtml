<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    @Styles.Render("~/Content/css")
</head>
<body>
    @* Header *@
    <div id="wapper">
        <!-- Header -->
        <div class="header">
            <div class="container-fulid">
                <div class="logo-box">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/adidas_logo_icon512.png" alt="">
                        </a>
                    </div>
                </div>
                <i class="fas fa-bars" id="icon-mobile"></i>
                <div class="header-menu">
                    <div class="logo-box logo-menu">
                        <div class="logo">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="~/Images/adidas_logo_icon512.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="menu menu_1">
                        <a href="@Url.Action("Index", "DanhSachProduct")" class="active-menu">Nam</a>
                    </div>

                    <div class="menu menu_2">
                        <a href="@Url.Action("Index", "DanhSachProduct")" class="active-menu">Nữ</a>
                    </div>

                    <div class="menu menu_3">
                        <a href="#" class="active-menu">Trẻ em</a>
                    </div>

                    <div class="menu menu_4">
                        <a href="#">Thể thao</a>
                    </div>

                    <div class="menu menu_5">
                        <a href="#">Các nhãn hiệu</a>
                    </div>
                </div>

                <div class="header-right">
                    <div class="search-box icon">
                        <input type="text" placeholder="Tìm kiếm">
                        <i class="fas fa-search"></i>
                    </div>

                    <div class="icon icon-box">
                        <a href="@Url.Action("Index", "GioHang")">
                            <img src="~/Images/2021-09-20_115558.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

    </div>


    @* Javascript *@
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myscript")
    @RenderSection("scripts", required: false)
</body>
</html>
